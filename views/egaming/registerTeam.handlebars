<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Register Team - FindMySquad</title>
  <link rel="stylesheet" href="/css/bootstrap-lite.css">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>

<nav class="navbar bg-light px-4">
  <div class="container-fluid d-flex justify-content-between align-items-center">
    <a class="navbar-brand fw-bold" href="/">FindMySquad</a>
    <div class="d-flex justify-content-center flex-grow-1 gap-3">
      <a href="/join" class="btn btn-outline-primary text-decoration-none">Join</a>
      <a href="/host" class="btn btn-outline-primary text-decoration-none">Host</a>
      <a href="/esports" class="btn btn-outline-primary text-decoration-none">Esports</a>
      <a href="/gymBuddy" class="btn btn-outline-primary text-decoration-none">GymBuddy</a>
    </div>
    <div class="d-flex align-items-center gap-2">
      {{#if isLoggedIn}}
        <a href="/profile/view" class="d-flex align-items-center gap-2 text-decoration-none text-dark">
          <img src="{{profilePic}}" alt="profile" class="rounded-circle" width="32" height="32">
          <span class="fw-semibold">{{username}}</span>
        </a>
        <a href="/logout" class="btn btn-outline-danger">Logout</a>
      {{else}}
        <a href="/login" class="btn btn-outline-primary">Login</a>
        <a href="/signup" class="btn btn-primary">Signup</a>
      {{/if}}
    </div>
  </div>
</nav>

<main class="container py-5">
  <h2 class="mb-4 text-center">Tournament: {{tournament.format}}</h2>

  {{#if isCreator}}
    <div class="alert alert-info text-center fw-bold">
      You are the creator of this tournament. You cannot join or create a team.
    </div>

  {{else if isAlreadyInTeam}}
    <div class="text-center mb-4">
      <h4>You are part of team <strong>{{userTeam.teamName}}</strong></h4>
      <form action="/esports/{{tournament._id}}/leave-team" method="POST" class="mt-3">
        <button type="submit" class="btn btn-warning">Leave Team</button>
      </form>
    </div>

  {{else}}
    <div class="row justify-content-center mb-5">
      <div class="col-md-6">
        <form action="/esports/{{tournament._id}}/register-team" method="POST" class="card shadow-sm p-4">
          <input type="hidden" name="action" value="create">
          <div class="mb-3">
            <label for="teamName" class="form-label fw-bold">Team Name</label>
            <input type="text" name="teamName" id="teamName" class="form-control" placeholder="Enter your Team Name" required minlength="2">
          </div>
          <div class="d-grid">
            <button type="submit" class="btn btn-primary">Register Team</button>
          </div>
        </form>
      </div>
    </div>

    {{#if (gt playersPerTeam 1)}}
    <div class="container mt-4">
      <h3 class="text-center mb-4">Or Join an Existing Team</h3>
      <div class="row">
        {{#each tournament.teams}}
        <div class="col-md-6 mb-4">
          <div class="card bg-light shadow-sm">
            <div class="card-body">
              <h5 class="card-title">{{this.teamName}}</h5>
              <p><strong>Players:</strong></p>
              <ul>
                {{#each this.players}}
                <li>{{this.username}}</li>
                {{/each}}
              </ul>

              {{#if (lt this.players.length ../playersPerTeam)}}
              <form action="/esports/{{../tournament._id}}/register-team" method="POST">
                <input type="hidden" name="action" value="join">
                <input type="hidden" name="joinTeamId" value="{{this._id}}">
                <div class="d-grid">
                  <button type="submit" class="btn btn-success mt-2">Join Team</button>
                </div>
              </form>
              {{else}}
              <p class="text-muted">Team Full</p>
              {{/if}}
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
    {{/if}}
  {{/if}}
</main>

<script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>
