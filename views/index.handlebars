        {{#if success}}
        <div id="success-popup" class="popup-success">
        {{success}}
        </div>
        <script>
            setTimeout(() => {
                const popup = document.getElementById("success-popup");
                if (popup) popup.style.display = "none";
                }, 1500);
        </script>
        {{/if}}


        <section class="section_home-faqs">
            <div
                class="w-layout-blockcontainer container-small padding-section-small w-container">
                <div class="image-container">
                    <img src="/images/pexels-ashleyrae-685382.jpg"
                        loading="lazy"
                        alt="Sports enthusiasts playing"
                        class="responsive-home-image" />
                </div>
            </div>
        </section>


        <section class="discover-games-section">
          <h2>Discover Games</h2>
          <pre>{{{json recentGames}}}</pre>
          <div class="discover-cards">
            <p>Total recent games: {{recentGames.length}}</p>
            {{#each recentGames}}   
              <div class="discover-card">
                <h4>{{this.title}}</h4>
                <p><strong>{{formatDate this.startTime}}</strong> | {{formatTime this.startTime}} - {{formatTime this.endTime}}</p>
                <p>{{this.location}}</p>
                <a href="/join/{{this._id}}" class="btn btn-primary">Join</a>
              </div>
            {{/each}}
          </div>
        </section>



        <footer>
            <nav>
                <div class="nav-links-container">
                    <ul class="nav-links">
                        {{#each footerLinks}}
                        <li><a href="{{this.url}}">{{this.name}}</a></li>
                        {{/each}}
                    </ul>
                </div>
            </nav>
            <p>Copyright &#169; {{currentYear}} FindMySquad. All Rights
                Reserved.</p>
        </footer>


        <script>
        function logout() {
            fetch('/logout', { method: 'POST' })
                .then(() => window.location.reload());
        }
    </script>

