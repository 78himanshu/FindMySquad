    crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>



  {{#if success}}
  <div id="success-popup" class="popup-success">
    {{success}}
  </div>
  <script>
    setTimeout(() => {
      const popup = document.getElementById("success-popup");
      if (popup) popup.style.display = "none";
    }, 1500);
  </script>
  {{/if}}


  <section class="section_home-faqs">
    <div class="w-layout-blockcontainer container-small padding-section-small w-container">
      <div class="image-container">
        <img src="/images/pexels-ashleyrae-685382.jpg" loading="lazy" alt="Sports enthusiasts playing"
          class="responsive-home-image" />
      </div>
    </div>
  </section>


  <section class="discover-games-section">


    <div class="container ">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Discover Games</h2>
        <a href="/join" class="btn btn-outline-primary btn-sm">See All Games</a>
      </div>

      <div class="row flex-nowrap overflow-auto" style="gap: 1rem;">
        {{#each upcomingGames}}
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          <div class="card h-100 shadow-sm border rounded p-3">

            <div class="d-flex justify-content-between align-items-center mb-2">
              <h5 class="mb-0 fw-semibold">{{title}}</h5>
              <span class="badge bg-success">{{sport}}</span>
            </div>

            {{#if (eq players.length playersRequired)}}
            <span class="badge bg-success mb-2">BOOKED</span>
            {{else if (eq (subtract playersRequired players.length) 1)}}
            <span class="badge bg-warning text-dark mb-2">üöÄ Only 1 Slot</span>
            {{/if}}

            <p class="mb-1 text-muted"><i class="bi bi-geo-alt me-1"></i> {{location}}</p>
            <p class="mb-1 text-muted"><i class="bi bi-building me-1"></i> <strong>Venue:</strong> {{venue}}</p>

            <p class="mb-1">
              <i class="bi bi-calendar-event me-1"></i>
              <strong>Date:</strong> {{formatDate startTime}}
            </p>
            <p class="mb-1">
              <i class="bi bi-clock me-1"></i>
              <strong>Time:</strong> {{formatTime startTime}} - {{formatTime endTime}}
            </p>

            <p class="mb-1">
              <i class="bi bi-people-fill me-1"></i>
              <strong>Players:</strong> {{players.length}} / {{playersRequired}}
            </p>

            <p class="mb-1">
              <i class="bi bi-stars me-1"></i>
              <strong>Skills:</strong> {{skillLevel}}
            </p>

            <p class="mb-2">
              <i class="bi bi-cash me-1"></i>
              <strong>Cost:</strong>
              {{#if (eq costPerHead 0)}}
              <span class="badge bg-primary">Free</span>
              {{else}}
              <span class="badge bg-warning text-dark">$ {{costPerHead}}</span>
              {{/if}}
            </p>

            <a href="/join/{{_id}}" class="btn btn-outline-success w-100">View Details</a>
          </div>
        </div>
        {{/each}}
      </div>
    </div>



  </section>


  <footer class="footer bg-dark text-light py-4 mt-5">
    <div class="container">
      <div class="row align-items-center">

        <div class="col-md-4 text-center text-md-start mb-3 mb-md-0">
          <a href="/" class="navbar-brand text-light fs-4 fw-bold">FindMySquad</a>
          <p class="mb-0 small">Find Players & Gym Buddies Nearby</p>
        </div>


        <div class="col-md-4 text-center mb-3 mb-md-0">
          <ul class="list-inline mb-0">
            <li class="list-inline-item mx-2"><a href="/join" class="text-light text-decoration-none">Join</a></li>
            <li class="list-inline-item mx-2"><a href="/host" class="text-light text-decoration-none">Host</a></li>
            <li class="list-inline-item mx-2"><a href="/gymBuddy" class="text-light text-decoration-none">GymBuddy</a>
            </li>
            <li class="list-inline-item mx-2"><a href="/profile/view"
                class="text-light text-decoration-none">Profile</a></li>
          </ul>
        </div>


        <div class="col-md-4 text-center text-md-end">
          <a href="#" class="text-light me-3"><i class="fab fa-instagram"></i></a>
          <a href="#" class="text-light me-3"><i class="fab fa-twitter"></i></a>
          <a href="#" class="text-light"><i class="fab fa-linkedin-in"></i></a>
        </div>
