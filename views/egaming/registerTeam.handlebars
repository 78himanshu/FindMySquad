<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Register Team – FindMySquad</title>
  <link rel="stylesheet" href="/css/bootstrap-lite.css">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>

<nav class="navbar bg-light px-4">
  <div class="container-fluid d-flex justify-content-between align-items-center">
    <a class="navbar-brand fw-bold" href="/">FindMySquad</a>
    <div class="d-flex justify-content-center flex-grow-1 gap-3">
      <a href="/join" class="btn btn-outline-primary">Join</a>
      <a href="/host" class="btn btn-outline-primary">Host</a>
      <a href="/esports" class="btn btn-outline-primary">Esports</a>
      <a href="/gymBuddy" class="btn btn-outline-primary">GymBuddy</a>
    </div>
    <div class="d-flex align-items-center gap-2">
      {{#if isLoggedIn}}
        <a href="/profile/view" class="d-flex align-items-center gap-2 text-dark">
          <img src="{{profilePic}}" width="32" height="32" class="rounded-circle">
          <span>{{username}}</span>
        </a>
        <a href="/logout" class="btn btn-outline-danger">Logout</a>
      {{else}}
        <a href="/login" class="btn btn-outline-primary">Login</a>
        <a href="/signup" class="btn btn-primary">Signup</a>
      {{/if}}
    </div>
  </div>
</nav>

<main class="container py-5">
  <h2 class="mb-4 text-center">Tournament: {{tournament.format}}</h2>

  {{!-- 1. Tournament Creator Management View --}}
  {{#if isCreator}}
    {{#each tournament.teams}}
      <div class="card mb-4 p-3">
        <h4>Team: {{this.teamName}}</h4>
        <ul class="list-group mb-2">
          {{#each this.players}}
            <li class="list-group-item d-flex justify-content-between align-items-center">
              {{this.username}}
              <form
                action="/esports/{{tournament._id}}/team/{{@../index}}/remove-member"
                method="POST"
                style="margin:0;"
              >
                <input type="hidden" name="memberId" value="{{this._id}}">
                <button class="btn btn-sm btn-danger">Remove</button>
              </form>
            </li>
          {{/each}}
        </ul>
        <form
          action="/esports/{{tournament._id}}/team/{{@index}}/disband"
          method="POST"
        >
          <button class="btn btn-warning">Disband Team</button>
        </form>
      </div>
    {{/each}}

  {{!-- 2. Team Leader View --}}
  {{else if isTeamLeader}}
    <div class="card mb-4 p-3">
      <h4>Your Team: {{userTeam.teamName}}</h4>
      <ul class="list-group mb-2">
        {{#each userTeam.players}}
          <li class="list-group-item d-flex justify-content-between align-items-center">
            {{this.username}}
            {{#unless (eq this._id ../userId)}}
              <form
                action="/esports/{{../tournament._id}}/team/{{../userTeam._id}}/remove-member"
                method="POST"
                style="margin:0;"
              >
                <input type="hidden" name="memberId" value="{{this._id}}">
                <button class="btn btn-sm btn-danger">Remove</button>
              </form>
            {{/unless}}
          </li>
        {{/each}}
      </ul>
      <form
        action="/esports/{{tournament._id}}/team/{{userTeam._id}}/disband"
        method="POST"
      >
        <button class="btn btn-warning">Disband Team</button>
      </form>
    </div>

  {{!-- 3. Regular Member View --}}
  {{else if isAlreadyInTeam}}
    <div class="text-center mb-4">
      <h4>You’re in <strong>{{userTeam.teamName}}</strong></h4>
      <form
        action="/esports/{{tournament._id}}/leave-team"
        method="POST"
        class="mt-3"
      >
        <button class="btn btn-warning">Leave Team</button>
      </form>
    </div>

  {{!-- 4. New User: Create or Join --}}
  {{else}}
    <div class="row justify-content-center mb-5">
      <div class="col-md-6">
        <form
          action="/esports/{{tournament._id}}/register-team"
          method="POST"
          class="card p-4 shadow-sm"
        >
          <input type="hidden" name="action" value="create">
          <div class="mb-3">
            <label for="teamName" class="form-label fw-bold">Team Name</label>
            <input
              type="text"
              id="teamName"
              name="teamName"
              class="form-control"
              placeholder="Enter Team Name"
              required
              minlength="2"
            >
          </div>
          <div class="mb-3">
            <label for="teamDescription" class="form-label fw-bold">Team Description</label>
            <textarea name="teamDescription" id="teamDescription"
             class="form-control"
             required minlength="5" maxlength="200"
             placeholder="Describe your team..."></textarea>
          </div>
          <button class="btn btn-primary w-100">Register Team</button>
        </form>
      </div>
    </div>

    {{#if (gt playersPerTeam 1)}}
      <div class="mt-4">
        <h3 class="text-center mb-4">Or Join an Existing Team</h3>
        <div class="row g-4">
          {{#each tournament.teams}}
            <div class="col-md-6">
              <div class="card shadow-sm">
                <div class="card-body">
                  <h5 class="card-title">{{this.teamName}}</h5>
                  <p class="mb-2">{{this.teamDescription}}</p>
                  <p><strong>Players:</strong> {{this.players.length}} / {{../playersPerTeam}}</p>
                  {{#if (lt this.players.length ../playersPerTeam)}}
                    <form
                      action="/esports/{{../tournament._id}}/register-team"
                      method="POST"
                    >
                      <input type="hidden" name="action" value="join">
                      <input type="hidden" name="joinTeamId" value="{{this._id}}">
                      <button class="btn btn-success w-100">Join Team</button>
                    </form>
                  {{else}}
                    <p class="text-muted">Team Full</p>
                  {{/if}}
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    {{/if}}
  {{/if}}
</main>

</body>
</html>
