<main class="container py-5">
  <h2 class="mb-4 text-center">Create Your Team for {{tournament.format}}</h2>

  <div class="row justify-content-center">
    <div class="col-md-6">
      <form action="/esports/{{tournament._id}}/register-team" method="POST" class="card shadow-sm p-4">
        <div class="mb-3">
          <label for="teamName" class="form-label fw-bold">Team Name</label>
          <input type="text" name="teamName" id="teamName" class="form-control" placeholder="Enter your Team Name" required>
        </div>
        <div class="d-grid">
          <button type="submit" class="btn btn-primary">Register Team</button>
        </div>
      </form>
    </div>
  </div>
</main>
