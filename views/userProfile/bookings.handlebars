<div class="container my-4">
  <h2 class="mb-4 text-center">Your Bookings</h2>

  <!-- Past Games -->
  {{#if pastGameBookings.length}}
  <h4 class="mb-3">Past Games</h4>
  <div class="row g-4">
    {{#each pastGameBookings}}
    <div class="col-md-6 col-lg-4">
      <div class="card h-100 shadow-sm">
        <div class="card-body">
          <h5 class="card-title">{{title}}</h5>
          <p class="card-text"><strong>Date:</strong> {{formattedDateTime}}</p>
          <p class="card-text"><strong>Location:</strong> {{location}}</p>

          {{#ifCond players.length '>' 1}}
          <button class="btn btn-primary btn-sm mb-2 btn-rate" data-bs-toggle="modal" data-bs-target="#rateModal"
            data-booking-id="{{_id}}" data-players='{{json players}}' data-host='{{host}}'>
            Rate Players
          </button>
          {{/ifCond}}


        </div>
      </div>
    </div>
    {{/each}}
  </div>
  {{else}}
  <h4 class="mb-3">Past Games</h4>
  <p class="text-muted text-center">You have no past game bookings yet.</p>
  {{/if}}

  <hr>
  <!-- Past Gym Sessions -->
  {{#if pastGymBookings.length}}
  <h4 class="mt-5 mb-3">Past Gym Sessions</h4>
  <div class="row g-4">
    {{#each pastGymBookings}}
    <div class="col-md-6 col-lg-4">
      <div class="card h-100 shadow-sm">
        <div class="card-body">
          <h5 class="card-title">{{title}}</h5>
          <p class="card-text"><strong>Date:</strong> {{formattedDateTime}}</p>
          <p class="card-text"><strong>Gym:</strong> {{gym}}</p>

          {{#ifCond players.length '>' 1}}
          <button class="btn btn-primary btn-sm mb-2 btn-rate" data-bs-toggle="modal" data-bs-target="#rateModal"
            data-booking-id="{{_id}}" data-players='{{json players}}' data-host='{{host}}'>
            Rate Players
          </button>
          {{/ifCond}}

        </div>
      </div>
    </div>
    {{/each}}
  </div>
  {{else}}
  <h4 class="mt-5 mb-3">Past Gym Sessions</h4>
  <p class="text-muted text-center">You have no past gym sessions yet.</p>
  {{/if}}

  <hr>

  <!-- Future Games and Sessions -->
  {{#if futureGameBookings.length}}
  <h4 class="mt-5 mb-3">Upcoming Games</h4>
  <div class="row g-4">
    {{#each futureGameBookings}}
    <div class="col-md-6 col-lg-4">
      <div class="card h-100 shadow-sm">
        <div class="card-body">
          <h5 class="card-title">{{title}}</h5>
          <p class="card-text"><strong>Date:</strong> {{formattedDateTime}}</p>
          <p class="card-text"><strong>Location:</strong> {{location}}</p>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  {{else}}
  <h4 class="mt-5 mb-3">Upcoming Games</h4>
  <p class="text-muted text-center">No upcoming games booked.</p>
  {{/if}}


  <hr>

  {{#if futureGymBookings.length}}
  <h4 class="mt-5 mb-3">Upcoming Gym Sessions</h4>
  <div class="row g-4">
    {{#each futureGymBookings}}
    <div class="col-md-6 col-lg-4">
      <div class="card h-100 shadow-sm">
        <div class="card-body">
          <h5 class="card-title">{{title}}</h5>
          <p class="card-text"><strong>Date:</strong> {{formattedDateTime}}</p>
          <p class="card-text"><strong>Gym:</strong> {{gym}}</p>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  {{else}}
  <h4 class="mt-5 mb-3">Upcoming Gym Sessions</h4>
  <p class="text-muted text-center">No upcoming gym sessions booked.</p>
  {{/if}}
</div>

<!-- Rating & Review Modal -->
<div class="modal fade" id="rateModal" tabindex="-1" aria-labelledby="rateModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-scrollable">
    <div class="modal-content">
      <form id="rateForm">
        <div class="modal-header bg-success text-white">
          <h5 class="modal-title" id="rateModalLabel">Rate and Review Players</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <div class="modal-body" id="rateFields">
          <!-- Rating fields will be injected here -->
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="rateCancel">Cancel</button>
          <button type="submit" class="btn btn-success">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>



<script src="/js/bookings.js"></script>
<!-- Bootstrap Bundle with Popper (for modal functionality) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>