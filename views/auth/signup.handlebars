<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{title}} - FindMySquad</title>
        <link rel="stylesheet" href="/css/signup.css">
        <link rel="stylesheet" href="/css/modal.css">
    </head>
    <body>
        <main>
            <div class="signup-form" id="signup-form">
                <h2 class="heading-secondary">CREATE AN ACCOUNT</h2>
{{!--
                {{#if error}}
                <div class="error-messages">
                    <div class="error-message">{{error}}</div>
                </div>
                {{/if}}

                {{#if errors}}
                <div class="error-messages">
                    {{#each errors}}
                    <div class="error-message">{{this}}</div>
                    {{/each}}
                </div>
                {{/if}} --}}
                
                {{#if error}}
                <div id="errorModal" class="modal-overlay">
                <div class="modal-content">
                <span class="close-button" onclick="closeModal()">&times;</span>
                <p>{{error}}</p>
                </div>
                </div>
                {{/if}}

<script>
  function closeModal() {
    document.getElementById('errorModal').style.display = 'none';
  }

  window.onload = function () {
    const modal = document.getElementById('errorModal');
    if (modal) {
      modal.style.display = 'flex';
      //setTimeout(() => closeModal(), 1500); // auto-close after 1.5s
    }
  }
</script>
                <div class="form-box">
                    <form class="form form--signup" id="signupForm"
                        action="/signup" method="POST">
                        <!-- Username Field -->
                        <div class="form__group">
                            <label class="form__label"
                                for="username">Username</label>
                            <input class="form__input" id="username"
                                name="username" type="text"
                                placeholder="Enter your username" required
                                value="{{username}}">
                        </div>

                        <!-- Email Field -->
                        <div class="form__group">
                            <label class="form__label" for="email">Email</label>
                            <input class="form__input" id="email" name="email"
                                type="email"
                                placeholder="you@example.com" required
                                value="{{email}}">
                        </div>

                        <!-- Password Field -->
                        <div class="form__group">
                            <label class="form__label"
                                for="password">Password</label>
                            <input class="form__input" id="password"
                                name="password" type="password"
                                placeholder="••••••••" required minlength="8">
                            <small class="form__hint">Minimum 8 characters with
                                uppercase, lowercase, number, and special
                                character</small>
                        </div>

                        <!-- Confirm Password Field -->
                        <div class="form__group">
                            <label class="form__label"
                                for="passwordConfirm">Confirm Password</label>
                            <input class="form__input" id="confirmPassword"
                                name="confirmPassword" type="password"
                                placeholder="••••••••" required minlength="8">
                        </div>

                        <!-- Submit Button -->
                        <div class="form__group">
                            <button class="submit-button" type="submit">Sign
                                Up</button>
                        </div>

                        <p class="switch-link">Already have an account? <a
                                href="/login">Login</a></p>
                    </form>
                </div>
            </div>
        </main>
    </body>
</html>