<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
      <div class="signup-form" id="signup-form">
        <h2 class="heading-secondary text-center mb-4">CREATE AN ACCOUNT</h2>
        <div id="error-messages" class="form__error text-center mb-3" style="color: red;"></div>
        <div class="form-box p-4 border rounded shadow-sm">
          <form class="form form--signup" id="signupForm" novalidate>
            <!-- Username Field -->
            <div class="form__group mb-3">
              <label class="form__label form-label" for="username">
                Username <span class="text-danger">*</span>
              </label>
              <input class="form__input form-control" id="username" name="username" type="text"
                placeholder="Enter your username" value="{{username}}" />
              <div id="usernameError" class="form__error text-danger mt-1"></div>
            </div>

            <!-- Email Field -->
            <div class="form__group mb-3">
              <label class="form__label form-label" for="email">
                Email <span class="text-danger">*</span>
              </label>
              <input class="form__input form-control" id="email" name="email" type="email" placeholder="you@example.com"
                value="{{email}}" />
              <div id="emailError" class="form__error text-danger mt-1"></div>
            </div>

            <!-- Password Field -->
            <div class="form__group password-wrapper mb-3">
              <label class="form__label form-label" for="password">
                Password <span class="text-danger">*</span>
              </label>
              <div class="form__input-container input-group">
                <!-- remove the right border so the button’s left border shows -->
                <input id="password" name="password" type="password" class="form__input form-control border-end-0"
                  placeholder="••••••••">
                <button type="button" class="toggle-password btn btn-outline-secondary d-flex align-items-center"
                  aria-label="Toggle Password Visibility">
                  <i class="eye-icon" data-state="hidden"></i>
                </button>
              </div>
              <div id="passwordStrength" class="form-text mt-1" style="font-size: 0.85rem;"></div>
              <div id="passwordError" class="form__error text-danger mt-1"></div>
            </div>

            <!-- Confirm Password Field -->
            <div class="form__group password-wrapper mb-4">
              <label class="form__label form-label" for="passwordConfirm">
                Confirm Password <span class="text-danger">*</span>
              </label>
              <div class="form__input-container input-group">
                <input class="form__input form-control" id="passwordConfirm" name="passwordConfirm" type="password"
                  placeholder="••••••••" />
                <button type="button" class="toggle-password btn btn-outline-secondary"
                  aria-label="Toggle Password Visibility">
                  <i class="eye-icon" data-state="hidden"></i>
                </button>
              </div>
              <div id="confirmError" class="form__error text-danger mt-1"></div>
            </div>

            <!-- Submit Button -->
            <div class="form__group text-center mb-3">
              <button class="submit-button btn btn-primary w-100" type="submit">
                Sign Up
              </button>
            </div>

            <p class="switch-link text-center">
              Already have an account?
              <a href="/login">Login</a>
            </p>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>


<!-- Include Bootstrap JS at end of body -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>