      <div class="card h-100 shadow-sm">
        <div class="card-body">
          <h5 class="card-title">{{title}}</h5>
          <p class="card-text"><strong>Date:</strong> {{formattedDateTime}}</p>
          <p class="card-text"><strong>Venue:</strong> {{venue}}</p>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}

  {{#if futureGymBookings.length}}
