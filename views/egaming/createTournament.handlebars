<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Create Tournament</title>
  <link rel="stylesheet" href="/css/bootstrap-lite.css">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
<nav class="navbar bg-light px-4">
  <div class="container-fluid d-flex justify-content-between align-items-center">

    <!-- LEFT SECTION: Brand -->
    <a class="navbar-brand fw-bold" href="/">FindMySquad</a>

    <!-- CENTER SECTION: Navigation Links -->
    <div class="d-flex justify-content-center flex-grow-1 gap-3">
      <a href="/join" class="btn btn-outline-primary text-decoration-none">Join</a>
      <a href="/host" class="btn btn-outline-primary text-decoration-none">Host</a>
      <a href="/esports" class="btn btn-outline-primary text-decoration-none">Esports</a>
      <a href="/gymBuddy" class="btn btn-outline-primary text-decoration-none">GymBuddy</a>
    </div>

    <!-- RIGHT SECTION: User Info -->
    <div class="d-flex align-items-center gap-2">
      {{#if isLoggedIn}}
        <a href="/profile/view" class="d-flex align-items-center gap-2 text-decoration-none text-dark">
          <img src="{{profilePic}}" alt="profile" class="rounded-circle" width="32" height="32">
          <span class="fw-semibold">{{username}}</span>
        </a>
        <a href="/logout" class="btn btn-outline-danger">Logout</a>
      {{else}}
        <a href="/login" class="btn btn-outline-primary text-decoration-none">Login</a>
        <a href="/signup" class="btn btn-primary text-decoration-none">Signup</a>
      {{/if}}
    </div>

  </div>
</nav>

<main class="container py-5">
  <h2 class="mb-4">Create Your Own Tournament</h2>

  <form id="createTournamentForm" action="/tournaments/create" method="POST" novalidate>
    <!-- Game Selection -->
    <div class="mb-3">
      <label class="form-label">Game</label>
      <select name="game" class="form-control" required>
        <option disabled selected value="">Select a game</option>
        {{#each games}}
          <option value="{{this}}">{{this}}</option>
        {{/each}}
      </select>
    </div>

    <!-- Format -->
    <div class="mb-3">
      <label class="form-label">Format</label>
      <select name="format" class="form-control" required>
        <option disabled selected value="">Select format</option>
        <option value="1v1">1v1</option>
        <option value="2v2">2v2</option>
        <option value="3v3">3v3</option>
        <option value="4v4">4v4</option>
        <option value="5v5">5v5</option>
      </select>
    </div>

    <!-- Date -->
    <div class="mb-3">
      <label class="form-label">Date</label>
      <input id="tournamentDate" type="date" name="date" class="form-control" required>
    </div>

    <!-- Start & End Time -->
    <div class="row">
      <div class="col-md-6 mb-3">
        <label class="form-label">Start Time</label>
        <input id="startTime" type="time" name="startTime" class="form-control" required>
      </div>
      <div class="col-md-6 mb-3">
        <label class="form-label">End Time</label>
        <input id="endTime" type="time" name="endTime" class="form-control" required>
      </div>
    </div>

    <!-- Skill Level -->
    <div class="mb-3">
      <label class="form-label">Skill Level</label>
      <select name="skillLevel" class="form-control" required>
        <option disabled selected value="">Choose a level</option>
        <option>Novice 1</option>
        <option>Novice 2</option>
        <option>Novice 3</option>
        <option>Amateur 1</option>
        <option>Amateur 2</option>
        <option>Amateur 3</option>
        <option>Expert 1</option>
        <option>Expert 2</option>
        <option>Expert 3</option>
      </select>
    </div>

    <!-- Max Teams -->
    <div class="mb-3">
      <label class="form-label">Max Teams (1–100)</label>
      <input type="number" name="maxTeams" class="form-control" min="1" max="100" required>
    </div>

    <!-- Tournament Description -->
    <div class="mb-3">
      <label class="form-label">Tournament Description</label>
      <textarea name="description" class="form-control" rows="3"
        minlength="10" maxlength="200" placeholder="Describe your tournament..." required></textarea>
    </div>

    <!-- Prize Description -->
    <div class="mb-3">
      <label class="form-label">Prize Details (5–50 chars)</label>
      <textarea name="prizeDescription" class="form-control" rows="2"
        minlength="5" maxlength="50" placeholder="e.g. '1st: $100, 2nd: $50, 3rd: $25'" required></textarea>
    </div>

    <!-- Submit -->
    <button type="submit" class="btn btn-primary mt-3">Create Tournament</button>
  </form>
</main>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const dateInput = document.getElementById('tournamentDate');
    const today = new Date().toISOString().split('T')[0];
    dateInput.min = today;

    const form = document.getElementById('createTournamentForm');
    form.addEventListener('submit', (e) => {
      const start = document.getElementById('startTime').value;
      const end = document.getElementById('endTime').value;
      if (start >= end) {
        e.preventDefault();
        alert('Start time must be before end time.');
      }
    });
  });
</script>
</body>
</html>
