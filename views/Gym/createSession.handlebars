<div class="container my-5">
  <div class="card shadow border-success">
    <div class="card-header bg-success text-white">
      <h2 class="mb-0">{{#if isEditMode}}Edit Gym Session{{else}}Host a Gym
        Session{{/if}}</h2>
    </div>
    <div class="card-body">
      <form id="gym-session-form"
        data-edit="{{#if isEditMode}}true{{else}}false{{/if}}"
        data-session-id="{{_id}}">
        <div class="row g-3 mt-3">
          <div class="col-md-6">
            <label for="gym_title">Title:<span
                class="text-danger">*</span></label>
            <input type="text" id="gym_title" name="gym_title" class="form-control"
              placeholder="Workout Title"
              value="{{#if isEditMode}}{{title}}{{/if}}" />

          </div>
          <div class="col-md-6">
            <label for="gym">Gym Name:<span class="text-danger">*</span></label>
            <input type="text" id="gym" name="gym" class="form-control"
              placeholder="Enter Gym Name" value="{{gym}}">
          </div>
        </div>

        <div class="mb-3 mt-3">
          <label for="description" class="form-label">Description <span
              class="text-danger">*</span></label>
          <textarea id="description" name="description" class="form-control"
            rows="3"
            placeholder="Describe your workout session">{{description}}</textarea>
        </div>

        <div class="row g-3">
          <div class="col-md-4">
            <label for="date">Date:<span class="text-danger">*</span></label>
            <input type="date" id="date" name="date" class="form-control"
              min="{{today}}" value="{{date}}">
          </div>
          <div class="col-md-4">
            <label for="startTime">Start Time:<span
                class="text-danger">*</span></label>
            <input type="time" id="startTime" name="startTime"
              class="form-control" value="{{startTime}}">
          </div>
          <div class="col-md-4">
            <label for="endTime">End Time:<span
                class="text-danger">*</span></label>
            <input type="time" id="endTime" name="endTime" class="form-control"
              value="{{endTime}}">
          </div>
        </div>

        <div class="row g-3 mt-3">
          <div class="col-md-6">
            <label for="gym-location" class="form-label">Gym Location: <span
                class="text-danger">*</span></label>

            <input type="text" id="gym-location" name="gymlocation"
              class="form-control"
              placeholder="Enter Gym Location" value="{{gymlocation}}">
          </div>

          <div class="col-md-6">
                <label for="maxMembers">How many members do you want?</label>
        <select id="maxMembers" name="maxMembers" required {{#if isEditMode}}disabled{{/if}}>
          <option value>--Select--</option>
          <option value="1" {{#if (eq maxMembers "1" )}}selected{{/if}}>Buddy
            (1)</option>
          <option value="2" {{#if (eq maxMembers "2" )}}selected{{/if}}>Trio
            (2)</option>
          <option value="3" {{#if (eq maxMembers "3" )}}selected{{/if}}>Gang
            (3)</option>
          <option value="4" {{#if (eq maxMembers "4" )}}selected{{/if}}>Group
            (4)</option>
        </select>
          </div>
        </div>

        <div class="row g-3 mt-3">
          <div class="col-md-6">
            <label for="experience" class="form-label">Experience:<span
                class="text-danger">*</span></label>
            <select id="experience" name="experience" class="form-select">
              <option value>Select Experience</option>
              <option value="newcomer" {{#if (eq experience
                "newcomer")}}selected{{/if}}>Newcomer</option>
              <option value="1+ year" {{#if (eq experience
                "1+ year")}}selected{{/if}}>1+ Year</option>
              <option value="3+ year" {{#if (eq experience
                "3+ year")}}selected{{/if}}>3+ Years</option>
              <option value="5+ year" {{#if (eq experience
                "5+ year")}}selected{{/if}}>5+ Years</option>
              <option value="10+ year" {{#if (eq experience
                "10+ year")}}selected{{/if}}>10+ Years</option>
            </select>
          </div>

          <div class="col-md-6">
            <label for="workoutType" class="form-label">Workout Type:<span
                class="text-danger">*</span></label>
            <select id="workoutType" name="workoutType" class="form-select">
              <option value>Select Workout Type</option>
              <option value="Cardio" {{#if (eq workoutType
                "Cardio")}}selected{{/if}}>Cardio</option>
              <option value="Body Building" {{#if (eq workoutType
                "Body Building")}}selected{{/if}}>Body Building</option>
              <option value="Power Lifting" {{#if (eq workoutType
                "Power Lifting")}}selected{{/if}}>Power Lifting</option>
              <option value="Calisthenics" {{#if (eq workoutType
                "Calisthenics")}}selected{{/if}}>Calisthenics</option>
              <option value="Yoga" {{#if (eq workoutType
                "Yoga")}}selected{{/if}}>Yoga</option>
              <option value="Other" {{#if (eq workoutType
                "Other")}}selected{{/if}}>Other</option>
            </select>
          </div>
        </div>


        <div class="mt-3">
          <input type="text" class="form-control" value="{{user.username}}"
            readonly
            style="color: gray; background-color: #f0f0f0;">
          <input type="hidden" id="hostedBy" name="hostedBy" value="{{user.userId}}">
        </div>

        <div class="d-grid mt-4">
          <button type="submit" class="btn btn-success btn-lg">
            {{#if isEditMode}}Update Session{{else}}Host Session{{/if}}
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<script
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBP-FJZsXytqUxzesnIEkrkUu4JoB1zO-M&libraries=places"></script>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Initialize Google Places Autocomplete for gym location
    const input = document.getElementById('gym-location');
    if (input) {
      const autocomplete = new google.maps.places.Autocomplete(input, {
        types: ['geocode'],
        componentRestrictions: { country: "us" }
      });

      autocomplete.addListener('place_changed', function () {
        const place = autocomplete.getPlace();
        if (place && place.formatted_address) {
          input.value = place.formatted_address;
        }
      });
    }

    // Set min date to today for all date inputs
    const today = new Date().toISOString().split("T")[0];
    document.querySelectorAll('input[type="date"]').forEach(input => {
      input.setAttribute("min", today);
    });

    // Set min time if date is today
    document.querySelectorAll("form").forEach((form) => {
      const dateInput = form.querySelector('input[type="date"]');
      const timeInputs = form.querySelectorAll('input[type="time"]');
      if (!dateInput || timeInputs.length === 0) return;

      function updateMinTimes() {
        const isToday = dateInput.value === today;
        const minTime = isToday
          ? (() => {
              const now = new Date();
              return now.toTimeString().slice(0, 5); // "HH:MM"
            })()
          : "00:00";

        timeInputs.forEach((ti) => ti.setAttribute("min", minTime));
      }

      dateInput.addEventListener("change", updateMinTimes);
      updateMinTimes();
    });
  });
</script>

